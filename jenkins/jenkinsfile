pipeline {
    agent any

    stages {
        stage('Checkout do CÃ³digo') {
            steps {
                git branch: 'main', credentialsId: 'github-cred', url: 'git@github.com:ivanmd96/projeto-cloud-gcp.git'
            }
        }

        stage('Terraform Init') {
            steps {
                sh 'cd terraform && terraform init'
            }
        }

        stage('Terraform Apply') {
            steps {
                sh 'cd terraform && terraform apply -auto-approve'
            }
        }
        stage('Gerar Inventory Ansible') {
            steps {
                dir('terraform') {
                script {
                    def instance_ip = sh(
                    script: "terraform output -raw instance_ip",
                    returnStdout: true
                ).trim()
                 writeFile file: '../ansible/inventory', text: """[vm] vm ansible_host=${instance_ip} ansible_user=ubuntu ansible_ssh_private_key_file=~/.ssh/id_rsa"""
                        }
                }
            }
        }

        stage('Configurar Ansible') {
            steps {
                sh 'cd ansible && ansible-playbook playbook.yml'
            }
        }
    }
}
